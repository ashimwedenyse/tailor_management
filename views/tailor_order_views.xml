<odoo>
    <data>

        <record id="view_tailor_order_list" model="ir.ui.view">
            <field name="name">tailor.order.list</field>
            <field name="model">tailor.order</field>
            <field name="arch" type="xml">
                <list string="Tailor Orders">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="customer_id"/>
                    <field name="garment_type"/>
                    <field name="status" widget="badge"
                           decoration-info="status == 'received'"
                           decoration-warning="status in ['measurement', 'cutting', 'sewing']"
                           decoration-success="status in ['ready', 'delivered']"/>
                    <field name="total_amount"/>
                </list>
            </field>
        </record>

        <record id="view_tailor_order_form" model="ir.ui.view">
            <field name="name">tailor.order.form</field>
            <field name="model">tailor.order</field>
            <field name="arch" type="xml">
                <form string="Tailor Order">
                    <header>
                        <button name="action_confirm_received" type="object" string="Mark Received"
                                invisible="status != 'draft'" class="btn-primary"/>

                        <button name="action_start_measurement" type="object" string="Start Measurement"
                                invisible="status != 'received'" class="btn-info"/>

                        <button name="action_start_cutting" type="object" string="Start Cutting"
                                invisible="status != 'measurement'" class="btn-warning"/>

                        <button name="action_start_sewing" type="object" string="Start Sewing"
                                invisible="status != 'cutting'" class="btn-warning"/>

                        <button name="action_start_finishing" type="object" string="Start Finishing"
                                invisible="status != 'sewing'" class="btn-success"/>

                        <button name="action_quality_check" type="object" string="Quality Check"
                                invisible="status != 'finishing'" class="btn-success"/>

                        <button name="action_mark_ready" type="object" string="Mark Ready"
                                invisible="status != 'quality_check'" class="btn-success"/>

                        <button name="action_mark_delivered" type="object" string="Mark Delivered"
                                invisible="status != 'ready'" class="btn-success"/>

                        <button name="action_cancel" type="object" string="Cancel Order"
                                invisible="status in ['draft', 'cancelled', 'delivered']" class="btn-secondary"/>

                        <field name="status" widget="statusbar" statusbar_visible="draft,received,measurement,ready,delivered"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_documents"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-file-text-o">
                                <field name="document_count" widget="statinfo" string="Documents"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id"/>
                                <field name="customer_email"/>
                                <field name="customer_phone"/>
                                <field name="order_date"/>
                            </group>
                            <group>
                                <field name="garment_type"/>
                                <field name="fabric_type"/>
                                <field name="color"/>
                                <field name="delivery_date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Design &amp; Fabric" name="design_fabric">
                                <group>
                                    <group string="Design Reference">
                                        <field name="design_image" widget="image" class="oe_avatar" options="{'size': [250, 250]}"/>
                                        <field name="special_instructions" placeholder="Add specific design notes here..."/>
                                    </group>
                                    <group string="Fabric Reference">
                                        <field name="fabric_image" widget="image" class="oe_avatar" options="{'size': [250, 250]}"/>
                                        <field name="fabric_type"/>
                                        <field name="color"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Measurements" name="measurements">
                                <group>
                                    <group>
                                        <field name="chest_measurement"/>
                                        <field name="waist_measurement"/>
                                        <field name="hip_measurement"/>
                                        <field name="shoulder_width"/>
                                    </group>
                                    <group>
                                        <field name="sleeve_length"/>
                                        <field name="armhole"/>
                                        <field name="back_length"/>
                                        <field name="front_length"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Financials" name="financials">
                                <group>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="total_amount" widget="monetary"/>
                                    <field name="advance_paid" widget="monetary"/>
                                    <field name="balance_due" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </page>

                            <page string="Notification Settings" name="notifications">
                                <group>
                                    <field name="send_email_notifications"/>
                                    <field name="send_sms_notifications"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                    <chatter>
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </chatter>
                </form>
            </field>
        </record>

        <record id="view_tailor_order_search" model="ir.ui.view">
            <field name="name">tailor.order.search</field>
            <field name="model">tailor.order</field>
            <field name="arch" type="xml">
                <search string="Tailor Orders">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="status"/>
                    <filter string="Draft" name="filter_draft" domain="[('status','=','draft')]"/>
                    <filter string="Ready" name="filter_ready" domain="[('status','=','ready')]"/>
                </search>
            </field>
        </record>

        <record id="action_tailor_orders" model="ir.actions.act_window">
            <field name="name">Tailor Orders</field>
            <field name="res_model">tailor.order</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_tailor_root" name="Tailor Management" sequence="10"/>
        <menuitem id="menu_tailor_orders" name="Orders" parent="menu_tailor_root" action="action_tailor_orders" sequence="10"/>

    </data>
</odoo>