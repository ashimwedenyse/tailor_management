<odoo>
    <record id="action_tailor_invoice_analysis" model="ir.actions.act_window">
        <field name="name">Invoice Analysis</field>
        <field name="res_model">account.invoice.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{'search_default_current':1, 'search_default_customer':1}</field>
        <field name="help">Revenue analysis automatically generated by Odoo.</field>
    </record>

    <record id="action_tailor_aged_receivable" model="ir.actions.act_window">
        <field name="name">Aged Receivables</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('credit', '>', 0)]</field>
        <field name="context">{'create': False}</field>
        <field name="help">List of customers who owe money.</field>
    </record>

    <record id="action_tailor_tax_report" model="ir.actions.act_window">
        <field name="name">Tax / VAT Items</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">list,pivot</field>
        <field name="domain">[('tax_line_id', '!=', False)]</field>
        <field name="context">{'group_by': 'tax_line_id'}</field>
    </record>

    <menuitem id="menu_tailor_financial_reports"
              name="Financial Reports"
              parent="menu_tailor_root"
              sequence="4"/>

    <menuitem id="menu_report_invoice_analysis"
              name="Revenue Analysis"
              parent="menu_tailor_financial_reports"
              action="action_tailor_invoice_analysis"
              sequence="1"/>

    <menuitem id="menu_report_aged_receivable"
              name="Aged Receivables (Overdue)"
              parent="menu_tailor_financial_reports"
              action="action_tailor_aged_receivable"
              sequence="2"/>

    <menuitem id="menu_report_vat"
              name="VAT / Tax Report"
              parent="menu_tailor_financial_reports"
              action="action_tailor_tax_report"
              sequence="3"/>
</odoo>