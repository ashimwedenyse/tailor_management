<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_tailor_management" model="ir.module.category">
            <field name="name">Tailor Management</field>
            <field name="description">Access levels for Tailor System</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_tailor_worker" model="res.groups">
            <field name="name">Tailor (Worker)</field>
            <field name="category_id" ref="module_category_tailor_management"/> <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view and update orders assigned to them.</field>
        </record>

        <record id="group_tailor_sales" model="res.groups">
            <field name="name">Sales Person</field>
            <field name="category_id" ref="module_category_tailor_management"/> <field name="implied_ids" eval="[(4, ref('group_tailor_worker'))]"/> <field name="comment">Can create and edit orders, view Showroom Dashboard.</field>
        </record>

        <record id="group_tailor_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_tailor_management"/> <field name="implied_ids" eval="[(4, ref('group_tailor_sales'))]"/> <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Full access to Financials, Profits, and Deletion.</field>
        </record>

        <record id="tailor_order_worker_rule" model="ir.rule">
            <field name="name">Tailor Order: Workers see assigned orders</field>
            <field name="model_id" ref="model_tailor_order"/>
            <field name="domain_force">['|', ('tailor_id', '=', user.id), ('tailor_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_tailor_worker'))]"/>
        </record>

        <record id="tailor_order_sales_rule" model="ir.rule">
            <field name="name">Tailor Order: Sales sees all</field>
            <field name="model_id" ref="model_tailor_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tailor_sales'))]"/>
        </record>

        <record id="tailor_order_admin_rule" model="ir.rule">
            <field name="name">Tailor Order: Admin sees all</field>
            <field name="model_id" ref="model_tailor_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_tailor_admin'))]"/>
        </record>

        <record id="tailor_order_portal_rule" model="ir.rule">
            <field name="name">Tailor Order: Portal users see own orders</field>
            <field name="model_id" ref="model_tailor_order"/>
            <field name="domain_force">[('customer_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>