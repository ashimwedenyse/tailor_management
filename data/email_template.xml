<odoo>
    <data noupdate="0">

        <record id="email_template_order_received" model="mail.template">
            <field name="name">Order Received</field>
            <field name="model_id" ref="tailor_management.model_tailor_order"/>
            <field name="subject">Order Confirmation: {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted or user.email }}</field>
            <field name="email_to">{{ object.customer_email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial,sans-serif;">
                    <p>Hello <t t-out="object.customer_id.name or 'Customer'"/>,</p>
                    <p>Your order <b><t t-out="object.name"/></b> has been received and is now in our system.</p>
                    <p>Thank you for choosing us!</p>
                </div>
            </field>
        </record>

        <record id="email_template_measurement" model="mail.template">
            <field name="name">Measurement Scheduled</field>
            <field name="model_id" ref="tailor_management.model_tailor_order"/>
            <field name="subject">Measurement Appointment: {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted or user.email }}</field>
            <field name="email_to">{{ object.customer_email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial,sans-serif;">
                    <p>Hello <t t-out="object.customer_id.name or 'Customer'"/>,</p>
                    <p>It is time to schedule your measurements for order <b><t t-out="object.name"/></b>.</p>
                    <p>Please contact us to confirm your availability.</p>
                </div>
            </field>
        </record>

        <record id="email_template_production" model="mail.template">
            <field name="name">Order in Production</field>
            <field name="model_id" ref="tailor_management.model_tailor_order"/>
            <field name="subject">Status Update: {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted or user.email }}</field>
            <field name="email_to">{{ object.customer_email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial,sans-serif;">
                    <p>Hello <t t-out="object.customer_id.name or 'Customer'"/>,</p>
                    <p>Your order <b><t t-out="object.name"/></b> is moving forward! It is now in the <b><t t-out="dict(object._fields['status'].selection).get(object.status)"/></b> stage.</p>
                </div>
            </field>
        </record>

        <record id="email_template_ready" model="mail.template">
            <field name="name">Order Ready</field>
            <field name="model_id" ref="tailor_management.model_tailor_order"/>
            <field name="subject">Your order {{ object.name }} is ready for pickup!</field>
            <field name="email_from">{{ user.email_formatted or user.email }}</field>
            <field name="email_to">{{ object.customer_email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial,sans-serif;">
                    <p>Hello <t t-out="object.customer_id.name or 'Customer'"/>,</p>
                    <p>Great news! Your order <b><t t-out="object.name"/></b> is complete and ready for pickup.</p>
                    <p style="font-size:16px;">Balance due: <b><t t-out="object.balance_due"/> <t t-out="object.currency_id.symbol"/></b></p>
                </div>
            </field>
        </record>

        <record id="email_template_delivered" model="mail.template">
            <field name="name">Order Delivered</field>
            <field name="model_id" ref="tailor_management.model_tailor_order"/>
            <field name="subject">Thank you for your order: {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted or user.email }}</field>
            <field name="email_to">{{ object.customer_email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial,sans-serif;">
                    <p>Hello <t t-out="object.customer_id.name or 'Customer'"/>,</p>
                    <p>Your order <b><t t-out="object.name"/></b> has been marked as delivered. We hope you love your garment!</p>
                </div>
            </field>
        </record>

        <record id="email_template_cancelled" model="mail.template">
            <field name="name">Order Cancelled</field>
            <field name="model_id" ref="tailor_management.model_tailor_order"/>
            <field name="subject">Cancellation Notice: {{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted or user.email }}</field>
            <field name="email_to">{{ object.customer_email }}</field>
            <field name="lang">{{ object.customer_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial,sans-serif;">
                    <p>Hello <t t-out="object.customer_id.name or 'Customer'"/>,</p>
                    <p>This is to confirm that your order <b><t t-out="object.name"/></b> has been cancelled.</p>
                </div>
            </field>
        </record>

    </data>
</odoo>